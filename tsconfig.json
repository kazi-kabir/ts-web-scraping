{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "esModuleInterop": true,
      "types": ["node"],
      "typeRoots": [
        "node_modules/@types"
        ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }